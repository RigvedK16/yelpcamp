<% layout('layouts/boilerplate')%>
    <h1>Campgrounds</h1>
    <br>
    <br>
    <a class="btn btn-warning mb-3" href="/campgrounds/new">Add a campground</a>
    <% for(let camp of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=camp.image  %>" alt="image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5>
                            <%=camp.title %>
                        </h5>
                        <p>
                            <%=camp.description %>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id   %>">View <%=camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>